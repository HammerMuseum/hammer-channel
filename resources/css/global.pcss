* {
  box-sizing: border-box;
}

:focus {
  outline: 3px solid var(--highlight-color-primary);
}

a:focus {
  background-color: var(--highlight-color-primary);
  outline: 3px solid var(--highlight-color-primary);
}

html {
  -webkit-tap-highlight-color: transparent;
}

html,
body,
div,
h1,
h2,
h3,
h4,
h5,
h6,
article,
aside,
footer,
header,
hgroup,
nav,
section {
  margin: 0;
  padding: 0;
  vertical-align: baseline;
}

html,
body {
  margin: 0;
  font-family: 'lft-etica', sans-serif;
  font-style: normal;
  font-weight: 300;
  color: #4d4b4b;
  background-color: #f4f4f4;
  -webkit-font-smoothing: antialiased;
}

h1,
h2,
h3,
h4 {
  -webkit-font-smoothing: auto;
  line-height: 1;
}

a {
  transition: 0.2s all;
}

img {
  max-width: 100%;
  height: auto;
  width: auto;
}

ul,
li {
  list-style: none;
  padding: 0;
  margin: 0;
}

.hidden {
  display: none;
}

p {
  font-size: 18px;
}

.nav-list {
  display: inline-flex;
}

.nav-item {
  padding: 1rem 1rem 1rem 0;
}

.visually-hidden {
  position: absolute !important;
  height: 1px;
  width: 1px;
  overflow: hidden;
  clip: rect(1px, 1px, 1px, 1px);
  white-space: nowrap;
}

.header-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1;
}

.main {
  padding-top: 72px;
}
