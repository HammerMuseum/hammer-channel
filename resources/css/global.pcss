html {
  -webkit-tap-highlight-color: transparent;
}

html,
body,
div,
h1,
h2,
h3,
h4,
h5,
h6,
article,
aside,
footer,
header,
hgroup,
nav,
section {
  margin: 0;
  padding: 0;
  vertical-align: baseline;
}

html,
body {
  background-color: var(--body-bg);
  color: #212121;
  font-family: 'lft_etica', sans-serif;
  font-style: normal;
  font-weight: 200;
  height: 100vh;
  margin: 0;
}

h1,
h2,
h3,
h4 {
  font-weight: 400;
}

a {
  color: #fff;
  transition: 0.2s all;
}

a:hover {
  color: var(--highlight-color-primary);
  background: #fff;
}

.main {
  max-width: 1076px;
  margin: 1rem auto;
  padding: 0 1rem;
}

.header {
  margin: 0 auto 1rem auto;
  max-width: 1076px;
  padding: 0 1rem;
}

ul,
li {
  padding: 0;
  margin: 0;
}
