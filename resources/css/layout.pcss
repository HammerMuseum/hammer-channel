.container {
  max-width: 1600px;
  margin: 0 auto;
}

.container--fixed {
  position: fixed;
  left: 0;
  max-width: 100%;
  width: 100%;
  margin: 0;
}

.container--top {
  top: 0;
}

.container--bottom {
  bottom: 0;
}

.main {
  padding: 54px 0 0 0;
}

.page-wrapper {
  padding-top: 54px;
}

@media (min-width: 37.5em) {
  .main {
    padding-top: 72px;
  }

  .page-wrapper {
    padding-top: 72px;
    display: flex;
    flex-direction: column;
  }
}
