.topic-menu {
  position: fixed;
  background: #fff;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 2;
  padding-left: 40px;
  box-shadow: 0 6px 10px 6px #bbb;
}

.navigation-bar__item {
  display: flex;
  align-items: center;
  height: var(--header-height);
  padding: 22px 0;
  margin: 0 32px;
  font-size: 24px;
  white-space: nowrap;
}

.navigation-bar .link {
  text-decoration: none;
  color: var(--text-primary);
}

.navigation-bar .link--active {
  color: var(--highlight-primary);
}
