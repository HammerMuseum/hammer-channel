.panels {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.panel--left {
  flex: 0 1 auto;
  position: sticky;
  top: 0;
  z-index: 10;
}

.panel--right {
  flex: 1 0 auto;
  min-height: calc(50vh + 24px);
}

@media screen and (min-width: 52.5em) {
  .panels {
    flex-direction: row;
  }

  .panel--left {
    flex: 1;
    min-width: 60%;
    margin-right: 16px;
  }

  .panel--right {
    flex: 1;
    min-height: auto;
  }
}
