.search-page__header {
  display: flex;
  flex-direction: column;
  padding: 0 24px 24px;
}

@media (min-width: 840px) {
  .search-page__header {
    display: flex;
    flex-direction: row;
    align-items: baseline;
    justify-content: space-between;
    padding: 0 48px 0 48px;
    margin-left: calc(25%);
    margin-bottom: 40px;
  }
}
