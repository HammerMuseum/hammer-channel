.search-page__form {
  margin-bottom: 40px;
}

.search__filters .page-heading--secondary {
  margin-bottom: 22px;
}

@media screen and (min-width: 600px) {
  .search-overlay-toggle {
    top: 14px;
    width: 40px;
    height: 40px;
  }
}

.search-page,
.search-page__sidebar,
.search-page__main {
  background: var(--background-primary);
}

.search-page {
  padding-top: 54px;
}

.search-page__sidebar {
  position: relative;
  z-index: 3;
}

.search-page__main {
  position: relative;
}

@media (min-width: 600px) {
  .search-page {
    padding-top: 72px;
  }
}

@media (min-width: 840px) {
  .search-page__content {
    display: flex;
  }

  .search-page__sidebar {
    flex: 1;
    padding: 0 24px 0 48px;
  }

  .search-page__main {
    flex: 3;
    padding: 0 48px 0 0;
  }
}
