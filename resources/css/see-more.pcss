.see-more__link {
  display: flex;
  align-items: center;
  padding-top: 25%;
  font-size: 24px;
  font-weight: 600;
  text-decoration: none;
  color: var(--text-primary);
}

.see-more__link .icon {
  width: 30px;
  height: 30px;
  margin-left: 8px;
}

.ui-card:hover .see-more__link {
  color: var(--highlight-primary);
}
