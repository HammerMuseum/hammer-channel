.see-more {
  width: 100%;
  align-self: flex-start;
}

.see-more__text {
  display: flex;
  align-items: center;
  font-size: 24px;
  line-height: 30px;
  font-weight: 600;
  color: var(--highlight-primary);
  transition: color 0.08s ease;

  .icon {
    --icon-transition-time: 0.08s;

    width: 30px;
    min-width: 30px;
    height: 30px;
    margin-left: 8px;
  }
}

.see-more:hover {
  .see-more__text {
    color: #8d8c8c;
  }

  .icon {
    color: #8d8c8c;
  }
}
