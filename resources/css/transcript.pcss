.video-meta__transcript {
  text-align: left;
  color: var(--text-secondary);
}

.transcript__content {
  position: relative;
}

.transcript__paragraph {
  margin-bottom: 24px;
  padding-left: 8px;
  margin-left: -8px;
  border-left: 1px solid transparent;
  transition: border-left 0.4s ease-in-out;

  &:last-child {
    margin-bottom: 72px;
  }
}

.transcript__options {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 16px;
}

.transcript__paragraph--active {
  border-left: 1px solid var(--highlight-primary);
}

.highlighter-toggle {
  border-bottom: 0;
}

.highlighter__inner {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  z-index: 10;
  background: var(--background-darker);
  padding: 20px;
  box-shadow: 0 6px 10px 0 var(--drop-shadow--hard);
  transition: top 0.4s ease-in-out;
}

.highlighter--top {
  position: fixed;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

.highlighter__controls {
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;

  .form__input {
    border: 1px solid var(--background-light);
    background: var(--background-darker);
    font-size: 16px;
    padding: 2px;
  }
}

.highlighter__actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;

  .button--action {
    padding: 2px;
    margin: 0 4px;
  }
}

.highlighter__context {
  margin-top: 0;
  transition: margin-top var(--default-transition);
}

.ht {
  background: var(--highlight-secondary);
}

.ht.current {
  background: var(--highlight-primary);
}

.tooltip--transcript .tooltip__content {
  position: absolute;
  top: -60px;
  left: -36px;
  transform: translate3d(-100%, 0, 0);
  transition: all 0.4s;
  display: block;

  &.vts-tooltip__content--visible {
    transform: translate3d(0, 0, 0);
  }

  .button {
    padding: 16px;
    font-size: 14px;
    font-weight: 700;
    text-decoration: underline;
    display: inline-flex;
    align-items: center;
  }

  .icon {
    padding-right: 6px;
  }
}

@media (min-width: 52.5em) {
  .tab--transcript {
    position: relative;

    .button--to-top {
      position: absolute;
    }

    .button--safe-area-bottom {
      bottom: 24px;
    }

    .video-meta__inner {
      overflow: auto;
      margin-bottom: 72px;
      min-height: 480px;
      max-height: calc(100vh - calc(var(--video-player-header-max-height) + var(--header-height) + 72px));
    }

    .video-meta__inner::after {
      content: "";
      width: calc(100%);
      height: 80px;
      position: absolute;
      bottom: 0;
      left: 0;
      background: -moz-linear-gradient(top, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 1) 100%);
      background: -webkit-linear-gradient(top, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 1) 100%);
      background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 1) 100%);
      pointer-events: none;
    }
  }

  .tab-content {
    position: relative;
  }
}

@media (min-width: 52.5em) {
  .highlighter__inner {
    position: absolute;
    top: 0;
    bottom: auto;
    box-shadow: 0 6px 12px -2px rgba(0, 0, 0, 0.8);
  }

  .highlighter__context--active {
    margin-top: 40px;
  }

  .tooltip--transcript .tooltip__content {
    left: -18px;
  }
}

@media (max-width: 52.5em) {
  .transcript__download,
  .transcript__paragraph {
    font-size: 14px;
    margin-bottom: 14px;
    line-height: 20px;
    text-align: left;
  }
}
