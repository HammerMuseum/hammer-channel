.video-meta__transcript {
  text-align: left;
  color: var(--text-secondary);
}

.transcript__paragraph {
  margin-bottom: 16px;
}

.transcript__actions {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  margin-bottom: 16px;
}

.transcript__paragraph--active {
  background: var(--highlight-primary);
}

@media (min-width: 52.5em) {
  .tab--transcript {
    .button--to-top {
      position: absolute;
    }

    .video-meta__inner {
      overflow: auto;
      max-height: calc(100vh - calc(var(--video-player-header-max-height) + var(--header-height) + 72px));
    }

    .video-meta__inner::after {
      content: "";
      width: calc(100% - 16px);
      height: 80px;
      position: absolute;
      bottom: 0;
      left: 0;
      background: linear-gradient(0deg, rgba(38, 38, 38, 1) 0%, rgba(255, 255, 255, 0) 100%);
    }
  }

  .tab-content {
    position: relative;
  }
}

@media (max-width: 52.5em) {
  .transcript__download,
  .transcript__paragraph {
    font-size: 14px;
    margin-bottom: 14px;
    line-height: 20px;
    text-align: left;
  }
}
